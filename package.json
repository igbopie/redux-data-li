{
  "name": "redux-data-li",
  "version": "0.2.0",
  "description": "Redux Utility to generate actions and reducers ofr API Calls",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "rm -fR lib; tsc --declaration",
    "add-all": "git add -A",
    "test": "jest",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/igbopie/redux-data-li.git"
  },
  "keywords": [
    "javascript",
    "redux"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.106",
    "jest": "^25.0.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^9.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test",
    "build",
    "add-all"
  ],
  "types": "./lib/index.d.ts",
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!src/examples/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
